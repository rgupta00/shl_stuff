<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="car" class="com.demo.attempt3.Car" scope="prototype">
		<constructor-arg index="0" ref="engine"></constructor-arg>
			<constructor-arg index="1" ref="tyre"></constructor-arg>
	</bean>
	<bean id="engine" class="com.demo.attempt3.TurboEngine" scope="prototype"/>
	<bean id="tyre" class="com.demo.attempt3.MrfTyre" scope="prototype"></bean>
</beans>
